@model ChargeModel

@{
    //page title
    ViewBag.PageTitle = T("Admin.ContentManagement.News.NewsItems.AddNew").Text;
    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("News items");
}

<form asp-controller="Charge" asp-action="ChargeCreate" method="post">
    <div class="content-header clearfix">
        <h1 class="pull-left">
            Add a new charge
            <small>
                <i class="fa fa-arrow-circle-left"></i>
                <a asp-action="List">back to charge list</a>
            </small>
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.Save")
            </button>
            @await Component.InvokeAsync("AdminWidget", new { widgetZone = AdminWidgetZones.NewsDetailsButtons })
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdate", Model)
</form>