@using YadiYad.Pro.Services.DTO.Job
@model UpdateJobApplicationCancelDTO

<div class="content content-job-cancel">
    <form id="form-job-cancel" role="form">
        <div class="p-4">
            <h4 class="text-primary text-center text-bold mb-3">Cancel Service</h4>
            <div class="form-group row">
                <label for="" class="col-sm-3 col-form-label">Reason</label>
                <div class="col-sm-9">
                    <select class="form-control select2 select"
                            name="reasonId"
                            placeholder="Reason"
                            data-sourceurl="/api/pro/source/CancellationReason?type=Job&party={{party}}"
                            data-id="id" data-text="name" required>
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label for="" class="col-sm-3 col-form-label">Remarks</label>
                <div class="col-sm-9">
                    <textarea type="text" name="remarks" class="form-control" placeholder="Please specify" maxlength="255" required></textarea>
                </div>
            </div>
            <div class="form-group row">
                <label for="" class="col-sm-3 col-form-label">Attachment</label>
                <div class="col-sm-9">
                    <nop-editor asp-for="AttachmentId" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-9">
                    <div id="investigation"></div>
                    <div id="notify"></div>
                </div>
            </div>
        </div>
        <input name="serviceProfileId" hidden />
        @await Html.PartialAsync("_ModalFooter", new ModalFooterModel { })

    </form>
</div>

<partial name="_FormComponent" />
@await Html.PartialAsync("_ValidationScriptsPartial")

<link href="/lib/fineuploader/fine-uploader.min.css" rel="stylesheet">
<script src="/lib/fineuploader/jquery.fine-uploader.min.js"></script>

<environment include="Development">
    <script src="~/js/pro/jobapplication/cancel.js" asp-append-version="true"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/pro/jobapplication/cancel.es5.min.js" asp-append-version="true"></script>
</environment>
