
<div class="content content-terminate">
</div>

<script id="tmpl-terminate" type="text/x-jsrender">
    <form id="form-job-terminate">
        <div class="p-4">
            <h4 class="text-primary text-center text-bold mb-3">Terminate Applicant</h4>
            <div class="form-group row">
                <label class="col-sm-5 col-form-label section-end-date">End Date</label>
                <div class="col-sm-7 section-end-date">
                    <input type="text" class="form-control form-control-datepicker-tdp"
                           name="endDate" mindate="7" required />
                </div>
                <label class="col-sm-5 col-form-label section-end-milestone hidden">End Milestone</label>
                <div class="col-sm-7 section-end-milestone hidden">
                    <select class="form-control select2 select"
                            name="endMilestoneId" textName="endMilestoneName"
                            placeholder="Milestone"
                            data-sourceurl="/api/pro/jobApplication/jobApplicationId/terminate/milestone"
                            data-id="id" data-text="description" required>
                    </select>
                </div>
                <label class="col-sm-5 col-form-label">Remarks</label>
                <div class="col-sm-7">
                    <input type="text" class="form-control" name="remarks" required />
                </div>
            </div>
            <div class="modal-footer">
                <input class="btn btn-danger btn-hire" type="submit" value="Terminate" />
                <input class="btn btn-default btn-cancel" type="button" value="Cancel" />
            </div>
           
        </div>
    </form>
</script>

<environment include="Development">
    <script src="~/js/pro/jobapplication/terminate.js" asp-append-version="true"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/pro/jobapplication/terminate.es5.min.js" asp-append-version="true"></script>
</environment>
