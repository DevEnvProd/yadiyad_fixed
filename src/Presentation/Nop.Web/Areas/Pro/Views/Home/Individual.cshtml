@using YadiYad.Pro.Web.Contexts
@inject AccountContext accountContext
@{
    ViewData["Layout"] = "Home";
    ViewData["Theme"] = "info";
}

<style>
    #navbar {
        position: fixed;
        width: 100%;
        top: 0;
    }

    .account-menu {
        position: fixed;
        width: 100%;
        top: 86px;
        z-index: 100;
    }

    @@media (max-width: 1200px) {
        .account-menu {
            top: 146px;
        }
    }

    .login-content {
        margin-top: 86px;
    }
</style>

<div class="content home-part-first home-individual-1 pt-5 pb-5 @(accountContext.CurrentAccount != null && string.IsNullOrWhiteSpace(accountContext.CurrentAccount.Email) == false ? "login-content" : "")">
    <div class="container">
        <div class="row">
            <div class="col-sm-">
                <div class="row">
                    <div class="col-lg-12 col-xl-6 row">
                        <div class="col-12 mb-4">
                            <div class="text-primary text-bold home-master-txt-1">What can Individuals do?</div>
                        </div>
                        <div class="col-12 mb-4">
                            <div class="text-bold">
                                Offer your expertise to organizations or other individuals on your terms.
                                Find the right expertise for your gig.
                            </div>
                        </div>
                        @if (accountContext.CurrentAccount == null || string.IsNullOrWhiteSpace(accountContext.CurrentAccount.Email))
                        {
                            <div class="col-12">
                                <a href="/pro/account/register" class="btn-primary btn text-bold individual-banner-btn-1 mb-2">Sign Up</a>
                                <a href="#section-seek-freelance-job" class="btn-outline-primary btn text-bold individual-banner-btn-1 mb-2">Seek Freelance Jobs</a>
                            </div>
                            <div class="col-12">
                                <a href="#section-buy-service" class="btn-outline-primary btn text-bold individual-banner-btn-1 mb-2">Buy Services</a>
                                <a href="#section-sell-service" class="btn-outline-primary btn text-bold individual-banner-btn-1 mb-2">Sell Services</a>
                            </div>
                            <div class="col-12 mb-4">
                                <div class="text-bold text-primary">
                                    Sign up and create your profile to search for individual sellers and freelance jobs.
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="col-12">
                                <a href="#section-seek-freelance-job" class="btn-outline-primary btn text-bold individual-banner-btn-1 mb-2">Seek Freelance Jobs</a>
                            </div>
                            <div class="col-12">
                                <a href="#section-buy-service" class="btn-outline-primary btn text-bold individual-banner-btn-1 mb-2">Buy Services</a>
                            </div>
                            <div class="col-12">
                                <a href="#section-sell-service" class="btn-outline-primary btn text-bold individual-banner-btn-1 mb-2">Sell Services</a>
                            </div>

                        }
   
                    </div>
                    <div class="col-xl-6 d-none d-xl-block">

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="content home-individual-2 pt-5 pb-5">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="row">
                    <div class="col-lg-6 mb-2">
                        <div>
                            <div class="individual-sub-card-inner-1 p-4">
                                <h3 class="text-bold text-white">Offer Expertise</h3>
                            </div>
                            <div class="individual-sub-card-inner-2 p-4 text-primary">
                                <div class="mb-2">
                                    Monetize your skills and expertise. Be hired by an organization or individual through the following engagement models:
                                </div>
                                <div class="text-bold">Seek Freelance Jobs</div>
                                <div class="mb-2">
                                    When you seek freelance job from an organization
                                    - Organization with Individual
                                </div>
                                <div class="text-bold">Sell Services</div>
                                <div>
                                    When you sell service to an individual service buyer – Individual with Individual
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 mb-2">
                        <div>
                            <div class="individual-sub-card-inner-3 p-4">
                                <h3 class="text-bold text-white">Find Expertise</h3>
                            </div>
                            <div class="individual-sub-card-inner-2 p-4 text-primary">
                                <div class="mb-2">Whether you are looking for a music teacher or a sports coach, find and hire suitable freelancers according to your requirements:​</div>
                                <div class="text-bold">Buy Services</div>
                                <div class="mb-2">When you buy service from an individual service seller – Individual with Individual.</div>

                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<div class="content pt-5 pb-5">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="row h-100">
                    <div class="col-lg-6 p-4">
                        <h3 class="text-bold text-primary mb-2">How Do We Help</h3>
                        <div class="text-bold text-primary mb-4 home-master-txt-1">Individuals</div>
                        <div class="d-inline-flex mb-4">
                            <img class="mr-5" style="width:50px;height:50px;" src="~/img/pro/home/ico-find-job.svg" loading="lazy">
                            <div>
                                <div class="text-bold">Find the right freelance job</div>
                                <div>according to your experience and expertise</div>
                            </div>
                        </div>
                        <div class="d-inline-flex mb-4">
                            <img class="mr-5" style="width:50px;height:50px;" src="~/img/pro/home/ico-flexible.svg" loading="lazy">
                            <div>
                                <div class="text-bold">Flexibility to choose</div>
                                <div>your job or service model according to your time and availability ​</div>
                            </div>
                        </div>
                        <div class="d-inline-flex mb-4">
                            <img class="mr-5" style="width:50px;height:50px;" src="~/img/pro/home/ico-track.svg" loading="lazy">
                            <div>
                                <div class="text-bold">Keep track of payments</div>
                                <div>received after completion of job or service through Escrow Service ​</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 p-4">
                        <img class="w-100" src="https://static.yadiyad.com/Assets/Images/Individual/individual-4paint.jpg" loading="lazy"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="section-seek-freelance-job" class="content home-individual-3 pt-5 pb-5">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="row">
                    <div class="col-12 mb-2">
                        <div class="text-bold text-primary home-master-txt-1">Seek Freelance Jobs</div>
                    </div>
                    <div class="col-12 pr-5 pl-5 mb-4 d-none d-lg-block">
                        <div class="individual-sub-card-inner-4">
                            <div class="d-inline-flex justify-content-around  w-100">
                                <div class="text-center">
                                    <img class="sub-card-inner-ico-1" src="~/img/pro/individual/ico-freelancer.svg" loading="lazy"/>
                                    <h4 class="text-secondary">Freelancer</h4>
                                </div>
                                <div class="text-center">
                                    <div style="height:50px"></div>
                                    <h4 class="text-white">Seek Freelance Job</h4>
                                    <img src="~/img/pro/individual/img-arrow-right.svg" loading="lazy"/>
                                </div>
                                <div class="text-center">
                                    <img class="sub-card-inner-ico-1" src="~/img/pro/individual/ico-organization.svg" loading="lazy"/>
                                    <h4 class="text-tertiary">Organization</h4>
                                </div>
                            </div>
                            <h3 class="text-bold text-white text-center">Organization with Individual​</h3>
                        </div>
                    </div>
                    <div class="col-12 mb-4 text-center">
                        <div>When you seek freelance job from organizations, there are three types of job models:​</div>
                    </div>
                    <div class="col-12">
                        <div class="row">
                            <div class="col-lg-4 mb-4">
                                <div class="ml-2 mb-2 p-2 bg-white individual-sub-card-inner-5">
                                    <div class="d-inline-flex p-2">
                                        <img class="mr-4" style="width:50px;height:50px;" src="~/img/pro/home/freelance-model-1.svg" loading="lazy">
                                        <div>
                                            <div class="text-bold text-primary">Freelance</div>
                                            <div class="text-bold text-primary">(Daily)</div>
                                        </div>
                                    </div>
                                    <div style="border-top: 1px solid #7CD8BF">
                                    </div>
                                    <div class="p-2">Freelancers are paid based on daily/half daily rate</div>
                                </div>
                            </div>
                            <div class="col-lg-4 mb-4">
                                <div class="ml-2 mb-2 p-2 bg-white individual-sub-card-inner-5">
                                    <div class="d-inline-flex p-2">
                                        <img class="mr-4" style="width:50px;height:50px;" src="~/img/pro/home/ico-project.svg" loading="lazy">
                                        <div>
                                            <div class="text-bold text-primary">Project- Based</div>
                                        </div>
                                    </div>
                                    <div style="border-top: 1px solid #7CD8BF">
                                    </div>
                                    <div class="p-2">Freelancers are paid after completion of project milestone</div>
                                </div>
                            </div>
                            <div class="col-lg-4 mb-4">
                                <div class="ml-2 mb-2 p-2 bg-white individual-sub-card-inner-5">
                                    <div class="d-inline-flex p-2">
                                        <img class="mr-4" style="width:50px;height:50px;" src="~/img/pro/home/ico-consultation.svg" loading="lazy">
                                        <div>
                                            <div class="text-bold text-primary">Consultation</div>
                                        </div>
                                    </div>
                                    <div style="border-top: 1px solid #7CD8BF">
                                    </div>
                                    <div class="p-2">Freelancers are paid after completion of the one-off consultation session​</div>
                                </div>
                            </div>
                            <div class="col-12 mb-4">
                                <h3 class="text-bold text-primary text-center">How It Works</h3>
                            </div>
                            <div class="col-12">
                                <div class="row h-100">
                                    <div class="col-lg-6 p-5 d-none d-lg-block">
                                        <img class="w-100 hiw-freelance-img" src="~/img/pro/individual/howitwork/hiw-freelance-1.png" loading="lazy"/>
                                    </div>
                                    <div class="col-lg-6 p-4">
                                        <h4 class="text-bold text-primary mb-4 pb-2" style="border-bottom: 1px solid #7CD8BF">Freelance (Daily), Project-Based</h4>
                                        <img class="w-100 d-lg-none" src="~/img/pro/individual/howitwork/hiw-freelance-1.png" loading="lazy"/>
                                        <div class="text-primary text-bold hiw-freelance-1">1. Create your Job CV</div>
                                        <div class="mb-4 hiw-freelance-1">List down your skills and expertise, preferred job model, available time and expected professional fees.</div>
                                        @*<img class="w-100 d-lg-none" src="~/img/pro/individual/howitwork/hiw-freelance-2.png" />*@
                                        <div class="text-primary text-bold hiw-freelance-2">2. Pay to apply</div>
                                        <div class="mb-4 hiw-freelance-2">Pay to apply for the jobs which best fit your expertise and requirements.</div>
                                        @*<img class="w-100 d-lg-none" src="~/img/pro/individual/howitwork/hiw-freelance-3.png" />*@
                                        <div class="text-primary text-bold hiw-freelance-3">3. Choose your payment preference</div>
                                        <div class="mb-4 hiw-freelance-3">
                                            When responding to job invite, you may state your payment preference, either to be paid directly by the organization or through Yadiyad with Escrow option.<br />
                                            Escrow option enables you to receive timely payment through Yadiyad after completion of job. For more information on the benefits of Escrow, go to <a class="underline-href" href="/escrow-service-terms">Escrow Service</a>.
                                        </div>
                                        @*<img class="w-100 d-lg-none" src="~/img/pro/individual/howitwork/hiw-freelance-4.png" />*@
                                        <div class="text-primary text-bold hiw-freelance-4">4. Flexible engagement</div>
                                        <div class="mb-4 hiw-freelance-4">The organization may contact you directly or update the hiring status on Yadiyad.</div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="row h-100">
                                    <div class="col-lg-6 p-4">
                                        <h4 class="text-bold text-primary mb-4 pb-2" style="border-bottom: 1px solid #7CD8BF">Consultation</h4>
                                        <img class="w-100 d-lg-none" src="~/img/pro/individual/howitwork/hiw-consultation-1.png" loading="lazy"/>
                                        <div class="text-primary text-bold hiw-consultation-1">1. Create your expert profile for matching</div>
                                        <div class="mb-4 hiw-consultation-1">List down your skills and expertise.</div>
                                        @*<img class="w-100 d-lg-none" src="~/img/pro/individual/howitwork/hiw-consultation-2.png" />*@
                                        <div class="text-primary text-bold hiw-consultation-2">2. Pay to apply</div>
                                        <div class="mb-4 hiw-consultation-2">Based on your expertise, organizations may shortlist you by sending you an invite. If you choose to accept the invite, answer and submit the screening questions.</div>
                                        @*<img class="w-100 d-lg-none" src="~/img/pro/individual/howitwork/hiw-consultation-3.png" />*@
                                        <div class="text-primary text-bold hiw-consultation-3">3. Session coordination</div>
                                        <div class="mb-4 hiw-consultation-3">If you are hired, a moderator from Yadiyad will contact you via email to confirm the session date and time.</div>
                                        @*<img class="w-100 d-lg-none" src="~/img/pro/individual/howitwork/hiw-consultation-4.png" />*@
                                        <div class="text-primary text-bold hiw-consultation-4">4. Consult and complete</div>
                                        <div class="mb-4 hiw-consultation-4">Yadiyad will securely pay you after the session is completed.</div>
                                    </div>
                                    <div class="col-lg-6 p-5 d-none d-lg-block">
                                        <img class="w-100 hiw-consultation-img" src="~/img/pro/individual/howitwork/hiw-consultation-1.png" loading="lazy"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="section-sell-service" class="content pt-5 pb-5">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="row">
                    <div class="col-12 mb-2">
                        <h1 class="text-bold text-primary ">Sell Services</h1>
                    </div>
                    <div class="col-12 pr-5 pl-5 mb-4 d-none d-lg-block">
                        <div class="individual-sub-card-inner-4">
                            <div class="d-inline-flex justify-content-around  w-100">
                                <div class="text-center">
                                    <img class="sub-card-inner-ico-1" src="~/img/pro/individual/ico-serviceseller.svg" loading="lazy"/>
