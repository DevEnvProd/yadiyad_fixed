                        <div class="individual-sub-card-inner-4">
                            <div class="d-inline-flex justify-content-around  w-100">

                                <div class="text-center">
                                    <img class="sub-card-inner-ico-1" src="~/img/pro/individual/ico-servicebuyer.svg" loading="lazy"/>
                                    <h4 class="text-secondary">Service Buyer</h4>
                                </div>
                                <div class="text-center">
                                    <div style="height:50px"></div>
                                    <h4 class="text-white">Buy Service</h4>
                                    <img src="~/img/pro/individual/img-arrow-right.svg" loading="lazy"/>
                                </div>
                                <div class="text-center">
                                    <img class="sub-card-inner-ico-1" src="~/img/pro/individual/ico-serviceseller.svg" loading="lazy"/>
