                    </div>
                    {{for serviceAcademicQualifications}}
                    {{if #index !== 0}}
                    <div class="col-12">
                        <hr class="mb-4" />
                    </div>
                    {{/if}}
                    <div class="col-12">
                        <div class="form-group row">
                            <label for="" class="col-sm-3 col-form-label">Qualification</label>
                            <div class="col-sm-9">
                                <div>{{:academicQualificationTypeName}}</div>
                            </div>
                        </div>
                    </div>

