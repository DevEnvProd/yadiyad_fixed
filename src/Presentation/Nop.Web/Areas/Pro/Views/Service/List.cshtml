                                <div>{{:company}}</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-group row">
                            <label for="" class="col-sm-3 col-form-label">Position</label>
                            <div class="col-sm-9">
                                <div>{{:position}}</div>
                            </div>
                        </div>
                    </div>
