<div class="content content-organization-profile">
    <div class="container">
        <partial name="_OrganizationMenu" />
        <div class="row">
            <div class="col-lg-4 col-sm-12">
                <div class="card h-100">
                    <div class="card-header text-center p-2 bg-gray-dark">
                        <h6 class="text-bold m-0">Let's start:</h6>
                    </div>
                    <div class="card-body">
                        <div class="text-left mb-4">
                            <a class="btn btn-round w-auto btn-default mb-2 btn-block" href="@Url.Action("Summary", "Job", new { Area = "Pro" }).ToLower()">Offer Freelance Jobs&nbsp;&nbsp;<img src="~/img/pro/profile/9-91228_how-next-icon-png-green-clipart.png" class="profile-next-ico-1 pull-right" /></a>
                            <a class="btn btn-round w-auto btn-default mb-2 btn-block" href="@Url.Action("List", "Consultation", new { Area = "Pro" }).ToLower()">Seek Consultations​&nbsp;&nbsp;<img src="~/img/pro/profile/9-91228_how-next-icon-png-green-clipart.png" class="profile-next-ico-1 pull-right" /></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-8 col-sm-12">
                <div class="row ">
                    <div class="col-6 col-sm-4 d-card">
                        <div class="card card-6 h-100 text-white bg-primary mb-3">
                            <div class="card-body">
                                <div class="text-center">
                                    Active Engagement<br />
                                    <div class="dashboard-card-image">
                                        <i class="fas fa-briefcase"></i>
                                        <div class="dashboard-card-text" text="{{jobEngagementCount}}"></div>
                                    </div>
                                    
                                    <div class="dashboard-card-image">
                                        <i class="fas fa-user-tie"></i>
                                        <div class="dashboard-card-text" text="{{consultationEngagementCount}}"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-6 col-sm-4 d-card">
                        <div class="card card-6 h-100 text-white bg-primary mb-3">
                            <div class="card-body">
                                <div class="text-center">
                                    Consultation Pending Rematch<br />
                                    <div class="dashboard-card-image">
                                        <i class="fas fa-hands-helping"></i>
                                        <div class="dashboard-card-text" text="{{noOfConsultantJobPendingRematch}}"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-6 col-sm-4 d-card">
                        <div class="card card-6 h-100 text-white bg-primary mb-3">
                            <div class="card-body">
                                <div class="text-center">
                                    Buying Service<br />
                                    Pending Rematch<br />
                                    <div class="dashboard-card-image">
                                        <i class="fas fa-money-bill"></i>
                                        <div class="dashboard-card-text" text="{{noOfJobPendingRematch}}"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Force next columns to break to new line -->
                    <div class="w-100"></div>

                    <div class="col-6 col-sm-4">
                        <div class="card card-6 h-100 text-white bg-primary mb-3">
                            <div class="card-body">
                                <div class="text-center">
                                    Deposit Reserve<br /><br />
                                    <i><h4> <div text="RM {{depositReserve}}"></div></h4></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-6 col-sm-4">
                        <div class="card card-6 h-100 text-white bg-primary mb-3">
                            <div class="card-body">
                                <div class="text-center">
                                    Deposit Due in next 14 days<br />
                                    <i><h4><div text="RM {{depositDue}}"></div></h4></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-6 col-sm-4">
                        <div class="card card-6 h-100 text-white bg-primary mb-3">
                            <div class="card-body">
                                <div class="text-center">
                                    New Applicant<br /><br>
                                    <div class="dashboard-card-image">
                                        <i class="fas fa-user-alt"></i>
                                        <div class="dashboard-card-text" text="{{newApplicant}}"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card mt-2">
            <div class="card-body">
                <ul class="nav nav-tabs">
                    <li class="nav-item">
                        <a data-toggle="tab" class="nav-link active" href="#tab-table1"><icon class="fa fa-home"></icon>  Job</a>
                    </li>
                    <li class="nav-item">
                        <a data-toggle="tab" class="nav-link" href="#tab-table2"><i class="fa fa-user"></i>  Consultation</a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane active py-3" id="tab-table1">
                        <h4 class="text-primary text-bold">Job Engagement</h4>
                        <div class="col-12">
                            <table class="table table-bordered table-hover tbl-job-engagement display">
                                <thead>
                                    <tr>
                                        <th>Engagement ID</th>
                                        <th>Engagement Date</th>
                                        <th>Engagement Status</th>
                                        <th>Deposit Status</th>
                                        <th>Total Deposit Amount</th>
                                        <th>Deposit Reserve</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="tab-pane fade py-3" id="tab-table2">
                        <h4 class="text-primary text-bold">Consultation Engagement</h4>
                        <div class="col-12">
                            <table class="table table-bordered table-hover tbl-consultation-engagement display">
                                <thead>
                                    <tr>
                                        <th>Engagement ID</th>
                                        <th>Engagement Date</th>
                                        <th>Engagement Title</th>
                                        <th>Engagement Status</th>
                                        <th>Deposit Status</th>
                                        <th>Total Deposit Amount</th>
                                        <th>Deposit Reserve</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section ScriptLibs{
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="/lib/moment/moment.min.js"></script>
    <script src="/lib/datatables/jquery.dataTables.js"></script>
    <script src="/lib/datatables-bs4/js/dataTables.bootstrap4.js"></script>
}

@section StyleLibs{
    <link href="/lib/datatables-bs4/css/dataTables.bootstrap4.css" rel="stylesheet">
}

@section Scripts{
    <environment include="Development">
        <script src="~/js/pro/organization/dashboard.js" asp-append-version="true"></script>
    </environment>
}

<script>
    $('.display').DataTable({
        responsive: true
    });

    $('a[data-toggle="tab"]').on('shown.bs.tab', function (e) {
        $($.fn.dataTable.tables(true)).DataTable().columns.adjust().responsive.recalc();
    });

</script>
