@model int

@using Nop.Web.Framework.UI;

@{
    Path = "~/Areas/Pro/Views/";
    Layout = "Shared/_Layout.cshtml";

    //title
    //Html.AddTitleParts(T("PageTitle.Checkout").Text);
    Html.AddTitleParts("Payment Failure");
    //page class
    Html.AppendPageCssClassParts("html-checkout-page");
    Html.AppendPageCssClassParts("html-order-completed-page");
}


<div class="content">
    <div class="container">
        <div class="mt-3 mb-3">
            <h1 class="text-center font-weight-bolder">Payment Failure</h1>
        </div>
        <div class="card">
            <div class="card-body topic text-center">
                <div class="title">
                    <strong>The payment information is wrongly inserted. Please try to make payment again for your order.</strong>
                </div>
            </div>
        </div>
        @if (Model != 0)
        {
            <div class="text-center">
                <a class="btn btn-primary btn-pay" href="#">Try again</a>
                <a class="btn btn-default" href="/api/pro/payment/response?orderid=@Model&status=0">Go Back</a>
            </div>
        }
        else
        {
            <div class="text-center">
                <a class="btn btn-primary" href="/">Go to Home Page</a>
            </div>
        }
    </div>
</div>
@section Scripts{
    <environment include="Development">
        <script src="~/js/pro/payment/response.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/pro/payment/response.es5.min.js" asp-append-version="true"></script>
    </environment>
}