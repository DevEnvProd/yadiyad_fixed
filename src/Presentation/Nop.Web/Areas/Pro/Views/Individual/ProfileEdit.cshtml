    <environment include="Development">
        <script src="/js/pro/individual/profileEdit.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="/js/pro/individual/profileEdit.es5.min.js" asp-append-version="true"></script>
    </environment>
}