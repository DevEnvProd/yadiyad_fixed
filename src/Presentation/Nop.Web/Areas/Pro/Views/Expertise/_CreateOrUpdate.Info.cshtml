@model ExpertiseModel

<div class="panel-body">
    <div>
        <div class="form-group">
            <div class="col-md-3">
                <nop-label asp-for="JobServiceCategoryList" />
            </div>
            <div class="col-md-9">
                <nop-select asp-for="JobServiceCategoryId" asp-items="@(new SelectList(Model.JobServiceCategoryList, "Id", "Name"))" asp-required="true" />
                <span asp-validation-for="Name"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-3">
                <nop-label asp-for="Name" />
            </div>
            <div class="col-md-9">
                <nop-editor asp-for="Name" asp-required="true" />
                <span asp-validation-for="Name"></span>
            </div>
        </div>

    </div>
</div>

