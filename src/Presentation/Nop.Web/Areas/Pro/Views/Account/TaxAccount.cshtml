@using YadiYad.Pro.Services.DTO.Individual
@model TaxAccountDTO
    <div class="content content-tax-account">
        <div class="container tax-account-info hidden">
            <div class="mt-3 mb-3">
                <h1 class="text-center font-weight-bolder">My Tax Account</h1>
            </div>
            <div class="card">
                <div class="card-body view">
                    <div class="row">
                        <div class="col-12">
                            <h4 class="font-weight-bolder">Tax Account Info</h4>
                        </div>
                        <div class="col-12">
                            <div class="form-group row">
                                <label for="" class="col-sm-4 col-form-label">SST Registration Number</label>
                                <div class="col-sm-8">
                                    <div class="col-form-label" text="{{sstRegNo}}" ></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row  justify-content-md-center">
                <div class="col-12 text-center">
                    <button class="btn btn-primary btn-edit">Edit</button>
                </div>
                <div class="col-12">
                    <br />
                </div>
            </div>
        </div>
        <div class="container tax-account-edit hidden">
            <form method="post" id="form-tax-account" role="form" action="/api/pro/individual/updateSSTRegNo">
                <div class="position-relative">
                    <div class="row mt-3 mb-3 ">
                        <div class="col-lg-12 text-center ">
                            <h1 class="text-center font-weight-bolder title-update text-primary">Update Tax Account</h1>
                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12">
                                <h4 class="font-weight-bolder">Tax Account Info</h4>
                            </div>
                            <div class="col-12">
                                <div class="form-group row">
                                    <label for="" class="col-sm-4 col-form-label">SST Registration Number</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control"
                                               name="sstRegNo" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row  justify-content-md-center">
                    <div class="col-12 text-center">
                        <input type="hidden" name="id" value="0" />

                        <button type="submit" class="btn btn-primary mb-2">Submit</button>
                        <button type="button" class="btn btn-cancel">Cancel</button>
                    </div>
                    <div class="col-12">
                        <br />
                    </div>
                </div>
            </form>
        </div>
    </div>

<partial name="_FormComponent" />

@section StyleLibs{
    <link href="/lib/the-datepicker/0.7.4/the-datepicker.css" rel="stylesheet" />
    <link href="/lib/intl-tel-input/17.0.12/css/intlTelInput.min.css" rel="stylesheet" />
    <link href="/lib/select2/css/select2.min.css" rel="stylesheet">
    <link href="/lib/fineuploader/fine-uploader.min.css" rel="stylesheet">

}
@section ScriptLibs{
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="/lib/moment/moment.min.js"></script>
    <script src="/lib/select2/js/select2.full.min.js"></script>
    <script src="/lib/intl-tel-input/17.0.12/js/utils.js"></script>
    <script src="/lib/intl-tel-input/17.0.12/js/intlTelInput.min.js"></script>
    <script src="/lib/intl-tel-input/17.0.12/js/intlTelInput-jquery.min.js"></script>
    <script src="/lib/the-datepicker/0.7.4/the-datepicker.min.js"></script>
    <script src="/lib/fineuploader/jquery.fine-uploader.min.js"></script>
}

@section Scripts{
    <environment include="Development">
        <script src="/js/pro/account/taxAccount.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="/js/pro/account/taxAccount.es5.min.js" asp-append-version="true"></script>
    </environment>
}