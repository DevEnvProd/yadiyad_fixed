@model LoginProModel
@{
    ViewData["Layout"] = "Blank";
    ViewData["Theme"] = "signup";
}


<div class="content content-account-sign-in">
    <div class="container">
        <header class="pt-5 pb-5">
            <div class="text-center">
                <img class="logo-sign-up" src="/img/pro/brand/logo-pro-filled.png" alt="YadiYad Pro Logo" />
            </div>
        </header>
        <form class="" asp-route="ProLogin"  asp-route-returnurl="@Context.Request.Query["ReturnUrl"]" method="post" autocomplete="off">
            <div class="card p-3 col-lg-6 ml-auto mr-auto col-lg-6 bg-primary-light content-sign-up-form">
                <h2 class="text-center mt-2 text-primary text-bold">Sign In Now</h2>
                <div class="text-center mb-4 text-bold">
                    <div>Don't have an account? <a class="text-center text-primary" href="~/Pro/Account/Register">Sign Up</a></div>
                </div>
                @*<div class="text-center mb-4 text-bold">
                    <div>Need to validate account? <a class="text-center text-primary" href="~/Pro/Account/ResentActivation">Resend validation email</a></div>
                </div>*@
                <div class="card p-3 m-0">
                    <div asp-validation-summary="ModelOnly" class="text-center text-danger"></div>
                    <label asp-for="Email" class="mt-3">Email address</label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="Email address" required="" autofocus="">

                    <label asp-for="Password" class="mt-3">Password</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Password" required="">

                    <button class="w-100 btn btn-lg btn-info mt-3" type="submit">Login Now</button>
                    <div class="text-center mt-3">
                        <a class="text-center text-primary" href="~/Pro/Account/PasswordRecovery">Forgot Password?</a>
                        <a class="text-center text-primary" href="~/Pro/Account/ResentActivation">Need to validate?</a>

                    </div>
                    @*<div class="text-center mt-3">
                        <a class="text-center text-primary" href="~/Pro/Account/ResentActivation">Need to validate?</a>
                    </div>*@
                </div>
            </div>
        </form>
    </div>
</div>
@section ScriptLibs{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
@section Scripts{
    <environment include="Development">
        <script src="~/js/pro/account/signin.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/pro/account/signin.es5.min.js" asp-append-version="true"></script>
    </environment>
}