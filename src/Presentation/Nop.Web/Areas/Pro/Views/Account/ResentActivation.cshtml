@model ResentActivationProModel
@{
    ViewData["Layout"] = "Blank";
    ViewData["Theme"] = "signup";
}
<div class="content content-password-recovery">
    <div class="container">
        <header class="pt-5 pb-5">
            <div class="text-center">
                <img class="logo-sign-up" src="/img/pro/brand/logo-new-pro-color.png" alt="YadiYad Pro Logo" />
            </div>
        </header>
        <form asp-controller="Account" asp-action="ResentActivation" method="post" autocomplete="off">
            <div class="card p-3 col-lg-6 ml-auto mr-auto col-lg-6 bg-primary-light content-sign-up-form">

                <h2 class="text-center mt-2 text-primary text-bold">Send Activation Email</h2>
                <div class="text-center mb-4 text-bold">
                    Already validated? <a class="text-center text-primary" href="~/Pro/Account/Login">Sign In</a>
                </div>
                <div class="card p-3 m-0 mt-3 ">
                    <div asp-validation-summary="ModelOnly" class="text-center text-danger"></div>
                    <label asp-for="Email" class="mt-3">Email address</label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="Email address" required="" autofocus="">

                    <input type="submit" name="send-email" class="w-100 btn btn-lg btn-info mt-3" value="Send" />
                    @*<a class="w-100 btn btn-lg btn-default mt-3 mb-3 btn-back" type="button" href="~/pro/">Back</a>*@

                    @if (!string.IsNullOrEmpty(Model.Result))
                    {
                        <div class="result text-center mt-3 text-bold text-primary">
                            @Model.Result
                        </div>
                    }
                </div>
            </div>
        </form>
    </div>
</div>
