
<div class="content content-subscription-applyview">
</div>
<div class="content content-payment-gateway hidden"></div>

<script id="template-subscription-applyview" type="text/x-jsrender">
    <div class="p-4">
        <h4 class="text-primary text-center text-bold">PVI - Pay to View and Invite</h4>
        <div>
            <div>
                <i class="fa fa-check" aria-hidden="true"></i>
                Unlimited Full Profile Viewing
            </div>
            <div>
                <i class="fa fa-check" aria-hidden="true"></i>
                Unlimited Invitations to Freelancers to Apply
            </div>
            <div>
                <i class="fa fa-check" aria-hidden="true"></i>
                90 days Validity
            </div>
        </div>
        <br/>
        <div class="text-center">Service Charge: {{:customerCurrencyCode}} {{:orderTotal}}</div>
        <h4 class="text-center text-bold">Total: {{:customerCurrencyCode}} {{:orderTotal}}</h4>
        <input class="btn btn-primary w-100 btn-pay" type="submit" value="Pay"   />
    </div>
</script>


<script id="template-subscription-payment" type="text/x-jsrender">
    <div class="p-4">
        <h4 class="text-primary text-center text-bold mb-3">Choose Payment Method</h4>
        <div class="row  justify-content-md-center">
            {{for paymentMethods}}
            <div class="col-4 mb-3">
                <div class="p-2 border border-1 border-white btn-payment-option cursor-pointer"  data-id="{{:id}}">
                    <div class="ratio-1-1">
                        <img class="w-100 center" alt="{{:name}}" src="{{:imageUrl}}" />
                    </div>
                </div>
            </div>
            {{/for}}
        </div>
        <input class="btn btn-secondary w-100 btn-confirm-pay" type="submit" value="Confirm and Pay" disabled />
    </div>
</script>

<partial name="../Payment/_PaymentRequest" />

<environment include="Development">
    <script src="~/js/pro/order/applyview.js" asp-append-version="true"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/pro/order/applyview.es5.min.js" asp-append-version="true"></script>
</environment>
