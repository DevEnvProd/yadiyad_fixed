<style>
    .cancel-btn{
        width: 100%;
        height: 50px;
    }
</style>

<div class="content content-payment-search">
    <div class="container">
        <h1 class="text-center mt-4">Cancel Deal</h1>

        <div class="card">
            <div class="card-header">
                <h3>Why are you cancelling?</h3>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <button type="button" class="btn btn-light border active cancel-btn">
                        <input class="d-none" type="radio" name="radio-group" checked>
                        Need to change delivery address
                    </button>
                </div>
                <div class="mb-3">
                    <button type="button" class="btn btn-light border cancel-btn">
                        <input class="d-none" type="radio" name="radio-group">
                        Seller is not responsive to my inquiries
                    </button>
                </div>
                <div class="mb-3">
                    <button type="button" class="btn btn-light border cancel-btn">
                        <input class="d-none" type="radio" name="radio-group">
                        Modify existing order (colour, size, voucher, etc)
                    </button>
                </div>
                <div class="mb-3">
                    <button type="button" class="btn btn-light border cancel-btn">
                        <input class="d-none" type="radio" name="radio-group">
                        Others / change of mind
                    </button>
                </div>
            </div>
        </div>
        <div class="row  justify-content-md-center">
            <div class="col-12 text-center">
                <button class="btn btn-primary btn-edit">Submit request</button>
            </div>
            <div class="col-12">
                <br />
            </div>
        </div>
    </div>
</div>

<script>
    $('button').on('click', function () {
        $(this).find('input').prop("checked", true);
        $('button').each(function () {
            $(this).removeClass('active')
        })
        $(this).addClass('active')
    })
</script>
