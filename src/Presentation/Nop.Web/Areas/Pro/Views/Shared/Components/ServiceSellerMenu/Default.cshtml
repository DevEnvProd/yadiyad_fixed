@using YadiYad.Pro.Web.Enums
@using YadiYad.Pro.Web.Models.Services
@model ServiceSellerMenuModel
<div class="row align-items-center mb-4 mt-4 partial-header">
    <div class="col-lg-4 col-sm-12">
        <partial name="../Account/_AccountInfo" />
    </div>
    <div class="col-lg-8 col-sm-12 text-md-right mt-4 mt-md-0 content-service-seller-counter">
        <div class="">
            <a class="btn mr-2 mb-2 btn-round w-auto @(Model.ServiceSellerMenuType == ServiceSellerMenuType.MyServiceProfiles?"btn-primary":"btn-default")" href="@Url.Action("List","Service", new { Area = "Pro" }).ToLower()">My Service Profiles</a>
            <a class="btn mr-2 mb-2 btn-round w-auto @(Model.ServiceSellerMenuType == ServiceSellerMenuType.Received?"btn-primary":"btn-default")" href="@Url.Action("Receives","ServiceApplication", new { Area = "Pro" }).ToLower()">
                <span>Received Requests</span>
                @if (Model.IndividualAttentionDTO.HasSellServiceRequestAttention)
                {
                    <span class="fas fa-circle fa-xs icon-attention"></span>
                }
            </a>
            <a class="btn mr-2 mb-2 btn-round w-auto @(Model.ServiceSellerMenuType == ServiceSellerMenuType.Hiring?"btn-primary":"btn-default")" href="@Url.Action("Hires","ServiceApplication", new { Area = "Pro" }).ToLower()">
                <span>Confirmed Order</span>
                @if (Model.IndividualAttentionDTO.HasSellServiceConfirmedOrderAttention)
                {
                    <span class="fas fa-circle fa-xs icon-attention"></span>
                }
            </a>
        </div>
    </div>
</div>
