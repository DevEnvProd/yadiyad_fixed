
<script id="tmp-simple-pagination" type="text/x-jsrender">
    {^{if totalPage > 0}}
    <div class="pager">
        <ul>
            {^{if hasPreviousPage}}
            <li class="previous-page">
                <a data-link="{on 'click' setPageIndex pageIndex-1}">Prev</a>
            </li>
            {{/if}}
            {^{if pageIndex-3 >= 0 && pageIndex === totalPage - 1}}
            <li class="individual-page">
                <a data-link="{on 'click' setPageIndex pageIndex-3}">...</a>
            </li>
            {{/if}}
            {^{if pageIndex-2 >= 0 && pageIndex !== totalPage - 1}}
            <li class="individual-page">
                <a data-link="{on 'click' setPageIndex pageIndex-2}">...</a>
            </li>
            {{/if}}
            {^{if pageIndex-2 >= 0 && pageIndex === totalPage - 1}}
            <li class="individual-page">
                <a data-link="{on 'click' setPageIndex pageIndex-2}">{^{:(pageIndex+1-2)}}</a>
            </li>
            {{/if}}
            {^{if pageIndex-1 >= 0}}
            <li class="individual-page">
                <a data-link="{on 'click' setPageIndex pageIndex-1}">{^{:(pageIndex+1-1)}}</a>
            </li>
            {{/if}}
            <li class="current-page">
                <span>{^{:(pageIndex+1)}}</span>
            </li>
            {^{if pageIndex+1+1 <= totalPage}}
            <li class="individual-page">
                <a data-link="{on 'click' setPageIndex pageIndex+1}">{^{:(pageIndex+1+1)}}</a>
            </li>
            {{/if}}
            {^{if pageIndex+1+2 <= totalPage && pageIndex === 0}}
            <li class="individual-page">
                <a data-link="{on 'click' setPageIndex pageIndex+2}">{^{:(pageIndex+1+2)}}</a>
            </li>
            {{/if}}
            {^{if pageIndex+1+2 <= totalPage && pageIndex !== 0}}
            <li class="individual-page">
                <a data-link="{on 'click' setPageIndex pageIndex+2}">...</a>
            </li>
            {{/if}}
            {^{if pageIndex+1+3 <= totalPage && pageIndex === 0}}
            <li class="individual-page">
                <a data-link="{on 'click' setPageIndex pageIndex+3}">...</a>
            </li>
            {{/if}}
            {^{if hasNextPage}}
            <li class="next-page">
                <a data-link="{on 'click' setPageIndex pageIndex+1}">Next</a>
            </li>
            {{/if}}
        </ul>
    </div>
    {{/if}}
</script>
