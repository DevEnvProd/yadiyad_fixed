@model ShoppingCartModel
@using Nop.Core
@using Nop.Core.Domain.Orders
@using Nop.Core.Domain.Tax
@inject IWebHelper webHelper
@inject IWorkContext workContext
@inject OrderSettings orderSettings

<style>
    input::-webkit-outer-spin-button,
    input::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    input[type=number] {
        -moz-appearance: textfield;
    }

    .seasonal-tag {
        font-size: 10px;
        color: white;
        background: #9900CC;
        padding: 3px 6px;
        display: inline-block;
        border-radius: 5px;
        width: 120px;
        text-align: center;
    }

    .discounts-notes {
        font-weight: 300;
        font-style: italic;
        color: red;
    }

    .discounts-notes-platform {
        font-weight: 300;
        font-style: italic;
        color: red;
        float: right;
        padding: 10px;
    }

    .cart-footer .discounts-notes {
        padding: 1em;
        text-align: right;
    }

    .shuq-logo-cart {
        width: 60px !important;
        height: 60px !important;
    }
</style>

<div class="order-summary-content">
    @await Component.InvokeAsync("Widget", new { widgetZone = PublicWidgetZones.OrderSummaryContentBefore })
    @await Html.PartialAsync("_OrderReviewData", Model.OrderReviewData)


    @if (Model.Vendors.Count > 0)
    {
        if (Model.Warnings.Count > 0)
        {
            <div class="message-error">
                <ul>
                    @foreach (var warning in Model.Warnings)
                    {
                        <li>@warning</li>
                    }
                </ul>
            </div>
        }
        @*we add enctype = "multipart/form-data" because "File upload" attribute control type requires it*@
        <form asp-route="ShoppingCart" method="post" enctype="multipart/form-data" id="shopping-cart-form">
            @if (Model.FromPage == "CartPage")
            {
                <div style="color: grey; font-size: 14px;"><b>Select item(s) to checkout</b></div>
            }
            @foreach (var vendor in Model.Vendors)
            {
                if (Model.FromPage == "CartPage" || vendor.Items.Where(x => x.IsSelected).Count() > 0)
                {
                    var colNo = 0;
                    <div class="row">
                        <div class="h5 mt-4 col-11">@vendor.Name</div>
                        @if (vendor.Category == "Eats")
                        {
                            <img class="shuq-logo-cart float-right  col-1 mt-2 mb-2" src="~/img/shuq/home/Shuq-Eats-Logo_100821.svg" loading="lazy">
                        }
                        else
                        {
                            <img class="shuq-logo-cart float-right  col-1 mt-2 mb-2" src="~/img/shuq/home/Shuq-Mart-Logo_100821.svg" loading="lazy">
                        }
                    </div>
                    <div class="table-wrapper cart-table-wrapper" style="@(Model.FromPage == "ConfirmPage" ? "border-radius: 10px 10px 0 0;":"") border-top:none">
                        <table class="cart">
                            <colgroup>
                                @if (Model.FromPage == "CartPage")
                                {
                                    colNo++;
                                    <col width="1" />
                                }
                                @if (Model.ShowSku)
                                {
                                    colNo++;
                                    <col width="2" />
                                }
                                @if (Model.ShowProductImages)
                                {
                                    colNo++;
                                    <col width="20" />
                                }
                                @if (Model.ShowVendorName)
                                {
                                    colNo++;
                                    <col width="20" />
                                }
                                <col width="20" />
                                <col width="3" />
                                <col width="3" />
                                <col width="3" />
                                @{
                                    colNo = colNo + 4;
                                }
                                @if (Model.FromPage == "CartPage")
                                {
                                    colNo++;
                                    <col width="1" />
                                }
                            </colgroup>
                            <thead>
                                <tr>
                                    @if (Model.FromPage == "CartPage" && vendor.Online)
                                    {
                                        <th style="padding-left:20px">
                                            <input class="float-left" type="checkbox" name="selectfromcartvendor" id="selectfromcartvendor@(vendor.Id)" value="@(vendor.Id)" aria-label="@T("ShoppingCart.Remove")" />
                                        </th>
                                    }
                                    else
                                    {
                                        <th style="padding-left:20px">
                                            <input hidden class="float-left" type="checkbox" aria-label="@T("ShoppingCart.Remove")" />
                                        </th>
                                    }
                                    @if (Model.ShowSku)
                                    {
                                        <th class="sku">
                                            @T("ShoppingCart.SKU")
                                        </th>
                                    }
                                    @if (Model.ShowProductImages)
                                    {
                                        <th class="product-picture">
                                            @T("ShoppingCart.Image")
                                        </th>
                                    }
                                    <th class="product">
                                        @T("ShoppingCart.Product(s)")
                                    </th>
                                    @if (Model.ShowVendorName)
                                    {
                                        <th class="vendor">
                                            @T("ShoppingCart.VendorName")
                                        </th>
                                    }
                                    <th class="unit-price">
                                        @T("ShoppingCart.UnitPrice")
                                    </th>
                                    <th class="quantity">
                                        @T("ShoppingCart.Quantity")
                                    </th>
                                    <th class="subtotal">
                                        @T("ShoppingCart.ItemTotal")
                                    </th>
                                    @if (Model.FromPage == "CartPage")
                                    {
                                        <th class="remove-from-cart">
                                            @*@T("ShoppingCart.Remove")*@
                                        </th>
                                    }
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in vendor.Items)
                                {
                                    if (Model.FromPage == "CartPage" || item.IsSelected)
                                    {
                                        <tr>
                                            @if (Model.FromPage == "CartPage" && vendor.Online && !item.IsProductDeleted && item.IsProductPublished)
                                            {
                                                <td>
                                                    <input type="checkbox" name="selectfromcart" id="selectfromcart@(item.Id)" value="@(item.Id)" data-vendorid="@vendor.Id" data-unitprice="@item.UnitPriceValue" data-discountprice="@item.DiscountValue" aria-label="@T("ShoppingCart.Remove")" />
                                                </td>
                                            }
                                            else
                                            {
                                                <td>
                                                    <input hidden type="checkbox" aria-label="@T("ShoppingCart.Remove")" />
                                                </td>
                                            }
                                            @if (Model.ShowSku)
                                            {
                                                <td class="sku">
                                                    <label class="td-title">@T("ShoppingCart.SKU"):</label>
                                                    <span class="sku-number">@item.Sku</span>
                                                </td>
                                            }
                                            @if (Model.ShowProductImages)
                                            {
                                                <td class="product-picture" style="text-align:center">
                                                    <a href="@Url.RouteUrl("Product", new {SeName = item.ProductSeName})"><img style="max-width:150px;" alt="@item.Picture.AlternateText" src="@item.Picture.ImageUrl" title="@item.Picture.Title" onerror="loadDefaultImage(event)" /></a>
                                                </td>
                                            }
                                            <td class="product">
                                                <div><a href="@Url.RouteUrl("Product", new {SeName = item.ProductSeName})" class="product-name">@item.ProductName</a></div>
                                                @if (item.DeliveryDates.Count > 0)
                                                {
                                                    <div class="seasonal-tag">
                                                        @T("ShoppingCart.Shipping.SeasonalDelivery")
                                                    </div>
                                                }
                                                @if (!vendor.Online || item.IsTna)
                                                {
                                                    <div class="message-error">
                                                        @T("ShoppingCart.Shipping.Tna")
                                                    </div>
                                                }
                                                else if (item.IsProductDeleted)
                                                {
                                                    <div class="message-error">
                                                        @T("ShoppingCart.Shipping.Deleted")
                                                    </div>
                                                }
                                                else if (!item.IsProductPublished)
                                                {
                                                    <div class="message-error">
                                                        @T("ShoppingCart.Shipping.Unpublished")
                                                    </div>
                                                }
                                                @if (!string.IsNullOrEmpty(item.AttributeInfo))
                                                {
                                                    <div class="attributes">
                                                        @Html.Raw(item.AttributeInfo)
                                                    </div>
                                                }
                                                @if (!string.IsNullOrEmpty(item.RecurringInfo))
                                                {
                                                    <div class="recurring-info">
                                                        @Html.Raw(item.RecurringInfo)
                                                    </div>
                                                }
                                                @if (!string.IsNullOrEmpty(item.RentalInfo))
                                                {
                                                    <div class="rental-info">
                                                        @Html.Raw(item.RentalInfo)
                                                    </div>
                                                }
                                                @*        @if (Model.FromPage == "CartPage" && item.AllowItemEditing)
                                                    {
                                                        var editCartItemUrl = Url.RouteUrl("Product", new { SeName = item.ProductSeName }, webHelper.CurrentRequestProtocol);
                                                        editCartItemUrl = webHelper.ModifyQueryString(editCartItemUrl, "updatecartitemid", item.Id.ToString());
                                                        <div class="edit-item">
                                                            <a href="@editCartItemUrl">@T("Common.Edit")</a>
                                                        </div>
                                                    }*@
                                                @if (item.Warnings.Count > 0)
                                                {
                                                    <div class="message-error">
                                                        <ul>
                                                            @foreach (var warning in item.Warnings)
                                                            {
                                                                <li>@Html.Raw(warning)</li>
                                                            }
                                                        </ul>
                                                    </div>
                                                }
                                            </td>
                                            @if (Model.ShowVendorName)
                                            {
                                                <td class="vendor">
                                                    <label class="td-title">@T("ShoppingCart.VendorName"):</label>
                                                    <span class="vendor-name">@item.VendorName</span>
                                                </td>
                                            }
                                            <td class="unit-price">
                                                <label class="td-title">@T("ShoppingCart.UnitPrice"):</label>
                                                <span class="product-unit-price">@item.UnitPrice</span>
                                            </td>
                                            <td class="quantity">
                                                <label class="td-title" for="itemquantity@(item.Id)">@T("ShoppingCart.Quantity"):</label>
                                                @if (Model.IsEditable)
                                                {
                                                    @*if (item.AllowedQuantities.Count > 0)
                                                        {
                                                            <select name="itemquantity@(item.Id)" id="itemquantity@(item.Id)" class="qty-dropdown">
                                                                @foreach (var qty in item.AllowedQuantities)
                                                                {
                                                                    <option selected="@qty.Selected" value="@qty.Value">@qty.Value</option>
                                                                }
                                                            </select>
                                                        }
                                                        else
                                                        {
                                                            <input name="itemquantity@(item.Id)" id="itemquantity@(item.Id)" type="text" value="@(item.Quantity)" class="qty-input" aria-label="@T("ShoppingCart.Quantity")" />
                                                        }*@


                                                    <div class="ml-2 d-inline-block pl-4 pr-4" style="border: 1px solid #ddd; border-radius: 7px; width:130px">
                                                        <button class="min button" name="min@(item.Id)" id="min@(item.Id)" style="height: 40px;
                                                        display: inline-block;
                                                        line-height: 40px;
                                                        cursor: pointer;
                                                        border:none;
                                                        background:none">
                                                            -
                                                        </button>
                                                        <input readonly style="border:none" name="itemquantity@(item.Id)" id="itemquantity@(item.Id)" type="number" min="1" value="@(item.Quantity)" class="qty-input" aria-label="@T("ShoppingCart.Quantity")" />

                                                        <button class="plus button" name="plus@(item.Id)" id="plus@(item.Id)" style="height: 40px;
                                                        display: inline-block;
                                                        line-height: 40px;
                                                        cursor: pointer;
                                                        border:none;
                                                        background:none">
                                                            +
                                                        </button>
                                                    </div>

                                                    <script asp-location="Footer">
                                                        $(document).ready(function () {
                                                            $("[type='checkbox']").prop("checked", false);

                                                            var price = @item.UnitPriceValue;
                                                            var discount = @(item.DiscountValue / item.Quantity);
                                                            var addInput = '[name="itemquantity@(item.Id)"]';
                                                            var total = '[name="product-subtotal@(item.Id)"]';
                                                            var totalDiscount = '[name="discount@(item.Id)"]';

                                                            $('[name="plus@(item.Id)"]').on('click', function (e) {
                                                                e.preventDefault();

                                                                let qty = $(addInput).val();
                                                                $(addInput).val(parseInt(qty) + 1);
                                                                $(total).html("RM " + (parseInt($(addInput).val()) * price).toFixed(2));
                                                                var yousavetxt = "@T("ShoppingCart.ItemYouSave")";
                                                                $(totalDiscount).html(yousavetxt.replace("{0}", "RM " + (parseInt($(addInput).val()) * discount).toFixed(2)));                                                                $("[name='selectfromcart']").change();
                                                                updateCartQty(@item.Id, parseInt(qty) + 1);

                                                            })

                                                            $('[name="min@(item.Id)"]').on('click', function (e) {
                                                                e.preventDefault();

                                                                let qty = $(addInput).val();
                                                                if (qty > 1) {
                                                                    $(addInput).val(parseInt(qty) - 1);
                                                                    $(total).html("RM " + (parseInt($(addInput).val()) * price).toFixed(2));
                                                                    var yousavetxt = "@T("ShoppingCart.ItemYouSave")";
                                                                    $(totalDiscount).html(yousavetxt.replace("{0}", "RM " + (parseInt($(addInput).val()) * discount).toFixed(2)));
                                                                    $("[name='selectfromcart']").change();
                                                                    updateCartQty(@item.Id, parseInt(qty) - 1);
                                                                }
                                                            });
                                                        });
                                                    </script>
                                                }
                                                else
                                                {
                                                    <span class="product-quantity" id="product_quantity@(item.Id)">@item.Quantity</span>
                                                }
                                            </td>
                                            <td class="subtotal">
                                                <label class="td-title text-bold">@T("ShoppingCart.ItemTotal"):</label>
                                                <span class="product-subtotal text-bold" name="product-subtotal@(item.Id)">@item.SubTotal</span>
                                                @if (!string.IsNullOrEmpty(item.Discount))
                                                {
                                                    <div class="discount" name="discount@(item.Id)">
                                                        @T("ShoppingCart.ItemYouSave", item.Discount)
                                                    </div>
                                                    if (item.MaximumDiscountedQty.HasValue)
                                                    {
                                                        <div class="discount-additional-info">
                                                            @T("ShoppingCart.MaximumDiscountedQty", item.MaximumDiscountedQty.Value)
                                                        </div>
                                                    }
                                                }
                                            </td>
                                            @if (Model.FromPage == "CartPage")
                                            {
                                                <td class="remove-from-cart">
                                                    @if (item.DisableRemoval)
                                                    {
                                                        <text>&nbsp;</text>
                                                    }
                                                    else
                                                    {
                                                        @*<label class="td-title" for="removefromcart@(item.Id)">@T("ShoppingCart.Remove"):</label>*@
                                                        <input type="checkbox" name="removefromcart" class="hidden" id="removefromcart@(item.Id)" value="@(item.Id)" aria-label="@T("ShoppingCart.Remove")" />
                                                        <button value="@T("ShoppingCart.UpdateCart")" class="btn-remove d-inline-flex">
                                                            <img style="width:20px" src="~/img/shuq/common/ico-remove.png">&nbsp;
                                                            Remove
                                                        </button>
                                                    }
                                                </td>
                                            }
                                        </tr>
                                    }

                                }
                                <script asp-location="Footer">
                                    $(document).ready(function () {
                                        let vendorCheckbox = "#selectfromcartvendor@(vendor.Id)";
                                        $(vendorCheckbox).click(function (e) {
                                            if ($(vendorCheckbox).is(":checked")) {
                                                @foreach(var item in vendor.Items)
                                                {
                                                    <text>
                                                $("#selectfromcart@(item.Id)").prop("checked", true);
                                                    </text>
                                                }

                                            } else {
                                                 @foreach(var item in vendor.Items)
                                                {
                                                    <text>
                                                $("#selectfromcart@(item.Id)").prop("checked", false);
                                                    </text>
                                                }
                                            }
                                            $("[name='selectfromcart']").change();
                                        });
                                    });
                                </script>
                            </tbody>

                            <tfoot>
                                @if (vendor.DeliveryDateClash)
                                {
                                    <tr>
                                        <td colspan="@colNo" class="text-left text-danger font-weight-bold">@T("ShoppingCart.SeasonalItem.DeliveryDateClash")</td>
                                    </tr>
                                }
                                @if (!String.IsNullOrEmpty(vendor.PotentialOrderSubTotalDiscountMsg)
                               || !String.IsNullOrEmpty(vendor.PotentialShippingDiscountMsg))
                                {
                                    <tr>
                                        <td colspan="@colNo" class="text-left font-weight-bold">
                                            @if (!String.IsNullOrEmpty(vendor.PotentialOrderSubTotalDiscountMsg))
                                            {
                                                <div class="discounts-notes">@Html.Raw(vendor.PotentialOrderSubTotalDiscountMsg)</div>
                                            }
                                            @if (!String.IsNullOrEmpty(vendor.PotentialShippingDiscountMsg))
                                            {
                                                <div class="discounts-notes">@Html.Raw(vendor.PotentialShippingDiscountMsg)</div>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tfoot>
                        </table>
                    </div>
                    if (Model.FromPage == "ConfirmPage")
                    {
                        <div class="cart-footer" style="border-radius: 0 0 10px 10px;border-top:none!important;text-align:right;">
                            @if (vendor.FailComputeShipping)
                            {
                                <div style="padding: 10px;">
                                    <label style="color:red">@T("ShoppingCart.Shipping.FailComputeShipping")</label>
                                </div>
                            }
                            else if (vendor.NotInsideCoverage)
                            {
                                if (vendor.NotInsideCoverageCar)
                                {
                                    <div style="padding: 10px;">
                                        <label style="color:red">@T("ShoppingCart.Shipping.NotInsideCoverageCar")</label>
                                    </div>
                                }
                                else
                                {
                                    <div style="padding: 10px;">
                                        <label style="color:red">@T("ShoppingCart.Shipping.NotInsideCoverageBike")</label>
                                    </div>
                                }

                            }
                            else if (vendor.ShipmentOverweight)
                            {
                                <div style="padding: 10px;">
                                    <label style="color:red">@T("ShoppingCart.Shipping.ShipmentOverweight", vendor.MaxShipmentWeight)</label>
                                </div>
                            }
                            else
                            {
                                <div class="totals">
                                    <div class="total-info">
                                        <table class="cart-total">
                                            <tbody>
                                                @if (vendor.CheckoutAttributes.Count() > 0)
                                                {
                                                    <tr class="order-subtotal">
                                                        <td colspan="2">
                                                            <label style="color:red">Please select delivery date &amp; time</label>
                                                        </td>
                                                    </tr>
                                                    @await Html.PartialAsync("_CheckoutAttributes", vendor)
                                                }
                                                <tr class="order-subtotal">
                                                    <td class="cart-total-left">
                                                        <label>Shipping Fee:</label>
                                                    </td>
                                                    <td class="cart-total-right">
                                                        <span class="value-summary subtotal-text">@vendor.ShippingCost</span>
                                                    </td>
                                                </tr>
                                                @if (vendor.DiscountValue > 0)
                                                {
                                                    <tr class="order-subtotal">
                                                        <td class="cart-total-left">
                                                            <label>Discount:</label>
                                                        </td>
                                                        <td class="cart-total-right">
                                                            <span class="value-summary subtotal-text">- @vendor.Discount</span>
                                                        </td>
                                                    </tr>
                                                }

                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                }

            }


            <div class="h4 mt-5">Total Summary</div>
            <div class="cart-footer">
                <div class="totals">

                    @if (Model.FromPage == "CartPage")
                    {
                        <div class="total-info">
                            <table class="cart-total">
                                <tbody>
                                    <tr class="order-subtotal">
                                        <td class="cart-total-left">
                                            <div>@T("ShoppingCart.Totals.SubTotal"):</div>
                                        </td>
                                        <td class="cart-total-right">
                                            <span class="value-summary subtotal-text">RM 0.00</span>
                                        </td>
                                    </tr>
                                    @*<tr class="order-subtotal-discount">
                                            <td class="cart-total-left">
                                                <label>@T("ShoppingCart.Totals.SubTotalDiscount"):</label>
                                            </td>
                                            <td class="cart-total-right">
                                                <span class="value-summary discount-text">RM 0.00</span>
                                            </td>
                                        </tr>*@
                                    <tr class="order-total">
                                        <td class="cart-total-left">
                                            <label>@T("ShoppingCart.Totals.OrderTotal"):</label>
                                        </td>
                                        <td class="cart-total-right">
                                            <span class="value-summary total-text text-bold"><strong>RM 0.00</strong></span>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                    }
                    else if (Model.FromPage == "BillingPage" || Model.FromPage == "ShippingPage")
                    {
                        @await Component.InvokeAsync("OrderTotals", new { isEditable = Model.IsEditable, isShowShipping = false, isShowTax = false, isShowDiscount = false })
                    }
                    else if (Model.FromPage == "ConfirmPage")
                    {
                        @await Component.InvokeAsync("OrderTotals", new { isEditable = Model.IsEditable })

                    }
                </div>
                <div style="clear:both">

                </div>
                <div class="discounts-notes-platform">
                    @if (!String.IsNullOrEmpty(Model.PotentialPlatformOrderSubTotalDiscountMsg) || !String.IsNullOrEmpty(Model.PotentialPlatformShippingDiscountMsg))
                    {
                        <div class="text-bold">@T("ShoppingCart.YadiyadDiscount")</div>
                    }
                    @if (!String.IsNullOrEmpty(Model.PotentialPlatformOrderSubTotalDiscountMsg))
                    {
                        <div>@Model.PotentialPlatformOrderSubTotalDiscountMsg</div>
                    }
                    @if (!String.IsNullOrEmpty(Model.PotentialPlatformShippingDiscountMsg))
                    {
                        <div>@Model.PotentialPlatformShippingDiscountMsg</div>
                    }
                </div>
            </div>

            @if (Model.FromPage == "CartPage" && Model.DisplayTaxShippingInfo)
            {
                var inclTax = workContext.TaxDisplayType == TaxDisplayType.IncludingTax;
                //tax info is already included in the price (incl/excl tax). that's why we display only shipping info here
                //of course, you can modify appropriate locales to include VAT info there
                <div class="tax-shipping-info">
                    @T(inclTax ? "ShoppingCart.TaxShipping.InclTax" : "ShoppingCart.TaxShipping.ExclTax", Url.RouteUrl("Topic", new { SeName = Html.GetTopicSeName("shippinginfo") }))
                </div>
            }
            <div class="cart-options">
                @if (Model.FromPage == "CartPage")
                {
                    <div class="discounts-notes text-bold">@T("ShoppingCart.DiscountOnPlatformAndVendor")</div>
                    <div class="common-buttons">
                        <input type="submit" name="updatecart" value="@T("ShoppingCart.UpdateCart")" class="button-2 update-cart-button hidden" />
                        <input type="submit" name="continueshopping" value="@T("ShoppingCart.ContinueShopping")" class="button-2 continue-shopping-button" />
                        @if (workContext.CurrentCustomer.Email == null)
                        {
                            <input type="submit" id="checkout" name="checkout" value="Continue to Log In" class="button-1 checkout-button" />
                        }
                        else
                        {
                            <input type="submit" id="checkout" name="checkout" value="Proceed to Checkout" class="button-1 checkout-button" /> 
                        }

                        @*@await Component.InvokeAsync("ShoppingCartEstimateShipping")*@
                    </div>
                }
            </div>


        </form>
    }
    else
    {
        <div class="no-data">
            @T("ShoppingCart.CartIsEmpty")
        </div>
    }

    @await Component.InvokeAsync("Widget", new { widgetZone = PublicWidgetZones.OrderSummaryContentAfter })
</div>

<script type="text/javascript" asp-location="Footer">
    $("#checkout").prop("disabled", true);
    $(".btn-remove").click(function (e) {
        e.preventDefault();
        $(this).prevAll().prop("checked", true);
        $("[name='updatecart']").click();
    })

    $("[name='selectfromcart']").change(function () {
        var subtotalFinal = 0;
        var discountFinal = 0;
        var isAllowCheckOut = false;

        $('[name="selectfromcart"]').each(function (e) {
            let vendorId = $(this).data("vendorid");

            if ($(this).prop("checked") == true) {
                let unitPrice = $(this).data("unitprice");
                let discountPrice = $(this).data("discountprice");
                let qty = $('[name="itemquantity' + $(this).val() + '"]').val();

                subtotalFinal += (parseFloat(unitPrice) * parseFloat(qty));
                discountFinal += (parseFloat(discountPrice) * parseFloat(qty));
                isAllowCheckOut = true;
            }

            $('[name="selectfromcart"]:not(:checked)[data-vendorid="' + vendorId + '"]').each(function (e) {
