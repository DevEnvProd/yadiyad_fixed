                                <div class="carousel-item">
                                    <div class="col-lg-4 col-md-6">
                                        <img class="img-fluid" alt="@Model.MartCategoryList[i].PictureModel.AlternateText" src="@Model.MartCategoryList[i].PictureModel.ImageUrl" title="@Model.MartCategoryList[i].PictureModel.Title" />
                                        <div class="text-primary">
                                            <a class="text-primary" href="@Url.RouteUrl("Category", new { SeName = Model.MartCategoryList[i].SeName })">@Model.MartCategoryList[i].Name</a>
                                        </div>
                                    </div>
                                </div>
                            }

