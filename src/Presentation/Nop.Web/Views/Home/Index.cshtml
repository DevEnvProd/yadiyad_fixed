            @await Component.InvokeAsync("HomepageCategories")*@
        @await Component.InvokeAsync("Widget", new { widgetZone = PublicWidgetZones.HomepageBeforeEatsProducts })
        @await Component.InvokeAsync("HomepageEatsProducts")

        <div class="mart-background pt-4 mt-4 mb-4">
            <div class="mart-background-container">
                <div class="row">
                    <div class="col-sm-6">
                        <i class="fa fa-search fa-2x shuq-mart-search-now"></i>
                        <span class="shuq-mart-search-now-description">Search Now</span>
                        <a href="@Url.Action("SearchMartProduct","Catalog")"><img class="d-flex shuq-logo" src="~/img/shuq/home/Shuq-Mart-Logo_100821.svg" height="50%" width="70%" loading="lazy"></a>
                    </div>
                    <div class="col-sm-6">
                        <div class="text-right text-primary">
                            <h4 class="text-primary text-bold">
                                Shop With Us!
                            </h4>
