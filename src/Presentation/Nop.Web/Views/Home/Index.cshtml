            <div class="eats-background pt-4 mt-4">
                <div class="eats-background-container">
                    <div class="row">
                        <div class="col-sm-6">
                            @*<div class="shuq-search-now-container"><i class="fa fa-search fa-2x shuq-search-now"></i></div>*@
                            <i class="fa fa-search fa-2x shuq-eats-search-now"></i>
                            <span class="shuq-eats-search-now-description">Search Now</span>
                            <a href="@Url.Action("SearchEatsProduct","Catalog")"><img class="d-flex shuq-logo" src="~/img/shuq/home/Shuq-Eats-Logo_100821.svg" height="50%" width="70%" loading="lazy"></a>
                        </div>
                        <div class="col-sm-6">
                            <div class="text-right eats-background-text">
                                <h4 class="text-bold">
                                    Hungry?
