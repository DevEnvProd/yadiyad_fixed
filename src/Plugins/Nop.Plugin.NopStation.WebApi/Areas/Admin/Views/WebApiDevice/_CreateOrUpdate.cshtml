@model DeviceModel

<div asp-validation-summary="All"></div>
<input asp-for="Id" type="hidden" />

<div class="content">
    <div class="form-horizontal">
        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="form-group">
                        <div class="col-md-3">
                            <nop-label asp-for="CustomerId" />
                        </div>
                        <div class="col-md-9">
                            <div class="form-text-row">
                                <a href="/Admin/Customer/Edit/@Model.CustomerId">@Model.CustomerName</a>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            <nop-label asp-for="DeviceTypeStr" />
                        </div>
                        <div class="col-md-9">
                            <div class="form-text-row">@Model.DeviceTypeStr</div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            <nop-label asp-for="DeviceToken" />
                        </div>
                        <div class="col-md-9">
                            <div class="form-text-row">@Model.DeviceToken</div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            <nop-label asp-for="SubscriptionId" />
                        </div>
                        <div class="col-md-9">
                            <div class="form-text-row">@Model.SubscriptionId</div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            <nop-label asp-for="StoreName" />
                        </div>
                        <div class="col-md-9">
                            <div class="form-text-row"><a href="/Admin/Store/Edit/@Model.StoreId">@Model.StoreName</a></div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            <nop-label asp-for="CreatedOn" />
                        </div>
                        <div class="col-md-9">
                            <div class="form-text-row">@Model.CreatedOn</div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            <nop-label asp-for="UpdatedOn" />
                        </div>
                        <div class="col-md-9">
                            <div class="form-text-row">@Model.UpdatedOn</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>